<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">

    <servlet>
        <servlet-name>AnalysisServlet</servlet-name>
        <servlet-class>at.ac.tuwien.aic.sc.web.AnalysisServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AnalysisServlet</servlet-name>
        <url-pattern>/analysis/*</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>ServerStatusServlet</servlet-name>
        <servlet-class>at.ac.tuwien.aic.sc.web.ServerStatusServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServerStatusServlet</servlet-name>
        <url-pattern>/server-status/*</url-pattern>
    </servlet-mapping>
</web-app>
